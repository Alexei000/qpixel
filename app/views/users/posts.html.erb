<% content_for :title, "#{params[:type].humanize} by #{@user.username}" %>

<h1><%= params[:type].humanize %> by <%= @user.username %></h1>

<%= tabs do %>
  <% tab 'Score', query_url(sort: 'score'), is_active: active_search?('score') %>
  <% tab 'Age', query_url(sort: 'age'), is_active: active_search?('created_at') %>
<% end %>

<% @posts.each do |post| %>
  <%= render 'posts/list', post: post %>
<% end %>

<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>