<div class="tabs">
  <%= link_to 'Activity', query_url(sort: 'activity'),
              class: "tabs__tab #{params[:sort].nil? || params[:sort] == 'activity' ? 'tab--active' : ''}" %>
  <%= link_to 'Age', query_url(sort: 'age'), class: "tabs__tab #{params[:sort] == 'age' ? 'tab--active' : ''}" %>
  <%= link_to 'Score', query_url(sort: 'score'), class: "tabs__tab #{params[:sort] == 'score' ? 'tab--active' : ''}" %>
</div>

<% @questions.each do |question| %>
  <%= render 'posts/list', post: question %>
<% end %>

<%= will_paginate @questions, renderer: BootstrapPagination::Rails %>