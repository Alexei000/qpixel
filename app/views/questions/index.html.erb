<% content_for :title, "Questions" %>
<% content_for :head do %>
  <link rel="alternate" type="application/rss+xml" title="Questions RSS Feed" href="/questions/feed.rss">
<% end %>

<div class="flex-row jc-sb">
  <h3>Questions</h3>
  <%= link_to new_question_path, class: 'header-button wb' do %>
    Ask Question &raquo;
  <% end %>
</div>

<%= render 'list' %>

<div>
  <% if user_signed_in? %>
    <%= link_to 'Subscribe to new questions', new_subscription_path(type: 'all', return_to: request.path) %> &middot;
    <%= link_to 'Subscribe to interesting questions', new_subscription_path(type: 'interesting', return_to: request.path) %>
  <% end %>
</div>
