<h1>Your Inbox</h1>
<p>You'll find all your inbox messages here, as far back as your account goes.</p>

<% @notifications.each do |notif| %>
  <div class="notification">
    <div class="has-color-tertiary-500 has-font-size-caption"><%= CGI.unescape_html(notif.created_at.strftime('%b&nbsp;%-d,&nbsp;%Y&nbsp;at&nbsp;%H:%M')).html_safe %></div>
    <a href="<%= notif.link %>"><%= notif.content %></a>
  </div>
<% end %>

<%= will_paginate @notifications, renderer: BootstrapPagination::Rails %>
